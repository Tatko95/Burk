@using Burk.Model.Resources;
@{
    ViewBag.Title = Session["ValueId"] == null ? Resource.Add + " " + Session["DossierName"].ToString() : Resource.Edit + " " + Session["DossierName"].ToString();
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/custom/Work/AddEdit.js" type="text/javascript"></script>
<script src="~/Scripts/custom/Attribute/Attribute.js" type="text/javascript"></script>
<script src="~/Scripts/custom/Attribute/AttributePanel.js" type="text/javascript"></script>

<div class="input_with_menu">
    @Html.Hidden("SystemId", Session["SystemId"])
    @Html.Hidden("DossierId", Session["DossierId"])
    @Html.Hidden("IsWork", Session["IsWork"])
    @Html.Hidden("IsCreate", Session["IsCreate"])
    @Html.Hidden("ValueId", Session["ValueId"])
    @Html.Hidden("MainListId", Session["MainListId"])
    @Html.Hidden("InsetId", Session["InsetId"])
    <h2>@Session["DossierName"].ToString()</h2>

    @if (!(bool)Session["IsCreate"])
    {
        <script src="~/Scripts/custom/SystemSettings/InsetSettings.js" type="text/javascript"></script>
        <div id='jqxMenuInset'></div>
        <h3> @Session["InsetName"].ToString()</h3>
    }
    <div id="AttributePanel"></div>

    <input id="createBtn" style="margin-left:10px" type="button" class="btn btn-primary btn-sm" onclick="Save()" value="@Resource.Save" />

    <div style="height:20px"></div>
</div>
