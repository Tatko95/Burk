@using Burk.Model.Resources;
@{
    ViewBag.Title = Resource.Settings;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="input_with_menu">
    @Html.Hidden("SystemId", Session["SystemId"])
    @Html.Hidden("DossierId", Session["DossierId"])
    @Html.Hidden("DossierInsetId", Session["DossierInsetId"])
    @Html.Hidden("IsWork", Session["IsWork"])
    <h2>@(Session["DossierName"] == null ? ViewBag.Title : Session["DossierName"].ToString())</h2>

    @if (Session["DossierId"] != null)
    {
        <script src="~/Scripts/custom/SystemSettings/InsetSettings.js" type="text/javascript"></script>
        <div id='jqxMenuInset'></div>
        <div id="addEditInsetDialog"></div>
        if (Session["DossierInsetId"] != null)
        {
            <script src="~/Scripts/custom/SystemSettings/AttributeSettings.js" type="text/javascript"></script>
            <script src="~/Scripts/custom/Attribute/Attribute.js" type="text/javascript"></script>
            <script src="~/Scripts/custom/Attribute/AttributePanel.js" type="text/javascript"></script>
            <h3>@(Session["DossierInsetName"] == null ? ViewBag.Title : Session["DossierInsetName"].ToString())</h3>
            <div>
                <input id="createBtn" type="button" class="btn btn-primary btn-sm" onclick="AddWindow(0)" value="@Resource.AddField" />
            </div>
            <div id="AttributePanel"></div>
            @*<div>
                <input id="saveBtn" type="button" class="btn btn-primary btn-sm" onclick="SaveAttribute()" value="@Resource.Save" />
            </div>*@
        }
    }
    <div style="height:20px"></div>
</div>
