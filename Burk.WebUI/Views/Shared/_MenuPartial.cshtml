@if (ViewBag.IsShowMenu != null && ViewBag.IsShowMenu == true)
{
    <style type="text/css">
        .jqx-menu {
            margin-left:-2px;
            margin-top: -1px;
            background-color: #222222;
        }

        .jqx-menu-dropdown {
            background-color: #222222;
        }

        .jqx-item {
            color: #999999;
        }

        .jqx-menu-item {
            color: #999999;
        }
    </style>
    <script src="~/Scripts/custom/SystemSettings/MenuSettings.js" type="text/javascript"></script>
    <div style="float:left; width:120px">
        <div id='jqxMenu'></div>
    </div>

    <div id="addEditMenuItemDialog"></div>
}
